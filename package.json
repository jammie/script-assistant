{
  "name": "script-assistant",
  "productName": "Script Assistant",
  "version": "0.0.1",
  "description": "The essential tool for a screenplay writer.",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dist:mac": "build -m",
    "dist:win": "build -w",
    "dist:linux": "build -l",
    "dist": "build -mwl",
    "reveal:data": "open ~/Library/Application\\ Support/Script\\ Assistant"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wonderunit/script-assistant.git"
  },
  "keywords": [
    "fountain",
    "script",
    "screenplay"
  ],
  "author": "Wonder Unit Inc.",
  "build": {
    "asar": true,
    "appId": "com.wonderunit.script-assistant",
    "compression": "maximum",
    "files": [
      "**/*",
      "!*.md",
      "!DEVELOPERS.md",
      "!README.md",
      "!notes",
      "!test"
    ],
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 140,
      "contents": [
        {
          "x": 120,
          "y": 250
        },
        {
          "x": 420,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "Graphics"
    },
    "nsis": {
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "v2.0.5",
    "electron-builder": "20.22.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "1.0.13",
    "moment": "^2.22.1",
    "pdfkit": "^0.8.3",
    "@google-cloud/text-to-speech": "^0.1.0",
    "execa": "^0.10.0",
    "md5": "^2.2.1",
    "mp3-duration": "^1.1.0",
    "chokidar": "2.0.4"
  }
}
